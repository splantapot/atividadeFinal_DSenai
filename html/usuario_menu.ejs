<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Menu Principal</title>
    <link rel="stylesheet" href="/css/global.css">
</head>
<body>
    <header>
        <h2>Gerenciador de Portfólios</h2>
        <div class="perfil">
            <img id="imagem_img" src="<%= user.imagem_perfil || '/images/guest.png' %>" alt="Imagem de Perfil" width="150px" height="150px">
        </div>
    </header>

    <label>Meus Portfólios</label>

    <script>
        //Check for "user"
        const user = JSON.parse('<%- typeof user !== undefined? JSON.stringify(user) : undefined %>');
        const userFields = ['usuario_id', 'nome', 'email', 'descricao_perfil']
        for (const field of userFields) {
            console.log(user[field])
            if (!user[field]) {
                alert(`Internal error: invalid field "${field}" in user`);
                window.location.href = '/logout'
                break;
            }
        }
    </script>
</body>
</html>